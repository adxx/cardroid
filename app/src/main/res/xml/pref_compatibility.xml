<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/pref_title_device_detection">

        <EditTextPreference
            app:defaultValue="1000"
            app:key="device_detection_delay"
            app:singleLine="true"
            app:useSimpleSummaryProvider="true"
            app:title="@string/pref_title_device_detection_delay"/>

        <EditTextPreference
            app:defaultValue="1000"
            app:key="device_detection_timeout"
            app:singleLine="true"
            app:useSimpleSummaryProvider="true"
            app:title="@string/pref_title_device_detection_timeout"/>

    </PreferenceCategory>

</PreferenceScreen>
