<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorAccentBG" />

        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape
            android:shape="oval">
            <gradient
                android:gradientRadius="50%"
                android:endColor="@color/colorAccentBG"
                android:centerColor="@color/colorPrimaryDark"
                android:startColor="@color/colorPrimaryDark"
                android:type="radial" />
        </shape>
    </item>
    <item
        android:bottom="16dp"
        android:left="16dp"

        android:right="16dp"
        android:top="16dp">
        <shape
            android:shape="oval">
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
</layer-list>