<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorAccentBG" />

        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="-200dp">
        <shape
            android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="@color/colorPrimaryDark"
                android:startColor="@color/colorAccentBG" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="-100dp"

        android:right="-100dp"
        android:top="-280dp">
        <shape
            android:shape="oval">
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
</layer-list>